<Page
    x:Class="App1.Faculty"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <HyperlinkButton HorizontalAlignment="Center" VerticalAlignment="Top" Click="HyperlinkButton_Click_1">
            <Image x:Name="topLogo" HorizontalAlignment="Center" Height="94" Margin="112,10,112,0" VerticalAlignment="Top" Width="136" Source="rasCollege.jpg"/>
        </HyperlinkButton>

        <Grid HorizontalAlignment="Center" Height="37" VerticalAlignment="Top" Width="340" Margin="10,104,10,0">
            <HyperlinkButton x:Name="hypLinkPage2" Content="Faculty Page" HorizontalAlignment="Left" Margin="10,12,0,0" VerticalAlignment="Center" Foreground="#FF00A200" FontSize="10" Click="hypLinkPage2_Click"/>
            <HyperlinkButton Content="To Do Items" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,12,217,0" Foreground="#FF00A200" FontSize="10" Click="HyperlinkButton_Click"/>
            <HyperlinkButton x:Name="todo2" Content="To Do 2" HorizontalAlignment="Left" Margin="128,12,0,0" VerticalAlignment="Center" Foreground="#FF00A200" FontSize="10" Click="todo2_Click"/>
            <HyperlinkButton x:Name="invPage" Content="Inventory Page" HorizontalAlignment="Left" Margin="167,12,0,0" VerticalAlignment="Top" Foreground="#FF00A200" FontSize="10" Width="91" Click="invPage_Click"/>
            <HyperlinkButton x:Name="GPACalcPage" Content="GPA Calculator" HorizontalAlignment="Stretch" Margin="258,12,10,0" VerticalAlignment="Top" FontSize="10" Foreground="#FF00A200" Click="GPACalcPage_Click"/>
        </Grid>

        <Image Opacity="0.35" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,148,0,132">
            <Image.Source>
                <BitmapImage x:Name="rasIcon" DecodePixelWidth="200" UriSource="rasIcon.jpeg" />
            </Image.Source>
        </Image>

            <TextBox x:Name="txtBoxFooter" HorizontalAlignment="Center" Margin="10,598,93,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="257" BorderBrush="#FFFDFDFD" IsReadOnly="True" FontSize="10" FontStyle="Italic" Opacity="0.75" RenderTransformOrigin="0.5,0.5"/>

        <TextBlock x:Name="txtCourse" HorizontalAlignment="Center" Margin="10,148,19,460" TextWrapping="Wrap" VerticalAlignment="Stretch" FontSize="11" Width="331">
            <Run Text="TextBlock"/>
        </TextBlock>
        <TextBlock x:Name="courseFaculty" HorizontalAlignment="Center" Margin="10,185,240,437" TextWrapping="Wrap" Text="" VerticalAlignment="Stretch" FontSize="10" FontStyle="Italic" Width="110"/>

        <Image x:Name="courseFacultyPic" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,180,10,0" Height="87" Width="83" RenderTransformOrigin="0.244,0.362" />
        <Button x:Name="course1Btn" Content="Course 1" HorizontalAlignment="Center" Margin="10,561,272,0" VerticalAlignment="Top" Background="#FF00A200" Click="button_Click"/>
        <Button x:Name="course2Btn" Content="Course 2" HorizontalAlignment="Center" Margin="145,561,137,0" VerticalAlignment="Top" Background="#FF00A200" Click="course2Btn_Click"/>
        <Button x:Name="course3Btn" Content="Course 3" HorizontalAlignment="Center" Margin="272,561,10,0" VerticalAlignment="Top" Background="#FF00A200" Click="course3Btn_Click"/>
        <TextBlock x:Name="aboutCourse" HorizontalAlignment="Center" Margin="12,208,93,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="257" Width="255" FontSize="11"/>
        <TextBlock x:Name="coursePrereq" HorizontalAlignment="Center" Margin="10,369,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontSize="10" Height="96" Width="340" FontStyle="Italic"/>


        </Grid>
</Page>
